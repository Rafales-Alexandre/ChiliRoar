{
  "name": "chiliroar-contracts",
  "version": "1.0.0",
  "description": "ChiliRoar - Smart Contracts ERC20 pour r√©compenser les fans de sport",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network chiliz_testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network chiliz_mainnet",
    "verify:testnet": "hardhat verify --network chiliz_testnet",
    "verify:mainnet": "hardhat verify --network chiliz_mainnet",
    "gas": "REPORT_GAS=true hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "clean": "hardhat clean",
    "type-check": "npx tsc --noEmit"
  },
  "keywords": [
    "chiliz",
    "erc20",
    "sports",
    "fan-tokens",
    "blockchain",
    "hardhat",
    "solidity",
    "smart-contracts"
  ],
  "author": "ChiliRoar Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.12",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chiliroar/chiliroar-contracts.git"
  },
  "bugs": {
