    "solidity-coverage": "^0.8.4",
    "solhint": "^4.0.0",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "repository": {
    "type": "git",
